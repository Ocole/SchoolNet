<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:weightSum="1">    <LinearLayout        android:visibility="visible"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical">        <com.youth.banner.Banner            android:id="@+id/binner_search_fragment"            android:layout_width="match_parent"            android:layout_height="150dp" />        <!-- LinearLayout(图片+文字)-->        <!-- TextView 提供在文字的周围可以防止图片-->        <LinearLayout            android:id="@+id/search_header"            android:layout_width="match_parent"            android:layout_height="?android:attr/actionBarSize"            android:layout_margin="10dp"            android:background="#CCC"            android:gravity="center"            android:orientation="horizontal"            android:visibility="gone">            <ImageView                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:src="@android:drawable/ic_menu_search" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:padding="10dp"                android:text="搜索" />        </LinearLayout>        <!-- 动态添加布局-->        <ScrollView            android:layout_width="match_parent"            android:layout_height="wrap_content">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:orientation="vertical">                <!-- 文字+横向滚动条-->                <!-- 多页显示的ViewPager-->                <android.support.v4.view.ViewPager                    android:id="@+id/viewpager_fragment_home"                    android:layout_width="match_parent"                    android:layout_height="126dp">                </android.support.v4.view.ViewPager>                <!-- 动态添加文字+3张图片的LinearLayout模块就可以了 -->            </LinearLayout>        </ScrollView>        <ImageView            android:id="@+id/iv_shchool"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:src="@drawable/school_life"            android:textSize="20sp" />        <TextView            android:id="@+id/tv_school"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="校园生活" />    </LinearLayout>    <GridView        android:id="@+id/gv_fragment_search"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:columnWidth="90dp"        android:gravity="center"        android:horizontalSpacing="10dp"        android:numColumns="auto_fit"        android:stretchMode="columnWidth"        android:verticalSpacing="10dp" /></LinearLayout>